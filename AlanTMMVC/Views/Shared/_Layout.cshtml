<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AlanTM</title>

    <link rel="apple-touch-icon" sizes="180x180" href="/favicons/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicons/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicons/favicon-16x16.png">
    <link rel="manifest" href="/favicons/site.webmanifest.json">
    <link rel="mask-icon" href="/favicons/safari-pinned-tab.svg" color="#5bbad5">
    <link rel="shortcut icon" href="/favicons/favicon.ico">
    <meta name="msapplication-TileColor" content="#ffffff">
    <meta name="msapplication-config" content="/favicons/browserconfig.xml">
    <meta name="theme-color" content="#ffffff">
    <meta name="robots" content="noindex, nofollow">
    <link rel="stylesheet" href="~/css/main.css" asp-append-version="true" />
</head>
<body>
    <header class="header transition">
        <nav class="header__nav transition">
            <a class="header__link header__link--home transition" asp-area="" asp-page="/Index">Alan Murtha</a>
            @if (false)
            {
                <a class="header__link header__link--alt transition" asp-area="" asp-page="/Art">Art?</a>
            }

        </nav>
    </header>
    <div class="header__spacing transition"></div>
    <div class="container">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="footer transition">
        <div class="col-container">
            <div class="col col--01">
                <a class="icon-container" href="mailto:alantmurtha@@gmail.com?subject=Hello Alan!">
                    <svg class="icon" viewBox="0 0 512 512">
                        <use xlink:href="/icons.svg#envelope" />
                    </svg>
                </a>
            </div>
            <div class="col col--02">
                <a class="icon-container" href="tel:918-633-9776">
                    <svg class="icon" viewBox="0 0 512 512">
                        <use xlink:href="/icons.svg#phone-alt" />
                    </svg>
                </a>
            </div>
            <div class="col col--03">
                <a class="icon-container" href="https://www.linkedin.com/in/alantmurtha/">
                    <svg class="icon" viewBox="0 0 448 512">
                        <use xlink:href="/icons.svg#linkedin-in" />
                    </svg>
                </a>
            </div>
        </div>
    </footer>

    <script src="~/js/lazyload.js" xasync="" asp-append-version="true"></script>
    <script src="~/js/site.js" defer="" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
